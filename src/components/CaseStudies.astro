  {
    title: "DealSource: AI-powered Investment Platform",
    client: "DealSource",
    description: "DealSource by AppVin is an AI-powered web platform offering a rich company database. It helps analysts, investors, and dealmakers find acquisition and investment opportunities using advanced AI insights.",
    image: "/images/dealsource-case-study.webp",
    logo: "/images/dealsource-logo.png",
    service: "Data Governance",
    technologies: ["React JS", "Python"],
    results: {
      efficiency: "50%",
      roi: "3.8x"
    },
    link: "/case-studies/deal-source"
  },
  {
    title: "Go-Lab: No-code Logistics Platform",
    client: "Go-Lab",
    description: "Go Lab is a no-code logistics platform that centralizes analytics, removes data silos, and helps companies streamline fleet operations while reducing reliance on costly third-party tools.",
    image: "/images/golab-case-study.webp",
    logo: "/images/golab-logo.png",
    service: "Custom AI",
    technologies: ["React JS", "Python"],
    results: {
      efficiency: "55%",
      roi: "4.0x"
    },
    link: "/case-studies/go-lab"
  }
