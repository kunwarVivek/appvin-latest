<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Slider functionality
    const sliderContainer = document.getElementById('slider-container');
    const prevButton = document.getElementById('prev-slide');
    const nextButton = document.getElementById('next-slide');
    const indicators = document.querySelectorAll('.slider-indicator');
    const slides = document.querySelectorAll('#slider-container > div');

    let currentIndex = 0;
    const totalSlides = slides.length;
    let slidesToShow = window.innerWidth < 768 ? 1 : window.innerWidth < 1024 ? 2 : 3;
    let maxIndex = Math.max(0, totalSlides - slidesToShow);
    let isAnimating = false;

    // Clone slides for infinite scrolling
    const setupInfiniteScroll = () => {
      // Remove any existing clones
      document.querySelectorAll('.slide-clone').forEach(clone => clone.remove());

      // Clone all slides and append to the end
      for (let i = 0; i < totalSlides; i++) {
        const clone = slides[i].cloneNode(true);
        clone.classList.add('slide-clone');
        sliderContainer.appendChild(clone);
      }

      // Clone all slides and prepend to the beginning
      for (let i = totalSlides - 1; i >= 0; i--) {
        const clone = slides[i].cloneNode(true);
        clone.classList.add('slide-clone');
        sliderContainer.prepend(clone);
      }

      // Adjust initial position to show the first real slide
      const slideWidth = slides[0].offsetWidth;
      sliderContainer.style.transition = 'none';
      sliderContainer.style.transform = `translateX(${-slideWidth * totalSlides}px)`;

      // Force reflow
      sliderContainer.offsetHeight;
      sliderContainer.style.transition = 'transform 500ms ease-in-out';

      currentIndex = 0;
    };

    // Update the active indicator
    const updateIndicators = (index) => {
      indicators.forEach((indicator, i) => {
        if (i === index) {
          indicator.classList.add('bg-primary-500', 'dark:bg-primary-400');
          indicator.classList.remove('bg-gray-300', 'dark:bg-gray-600');
        } else {
          indicator.classList.remove('bg-primary-500', 'dark:bg-primary-400');
          indicator.classList.add('bg-gray-300', 'dark:bg-gray-600');
        }
      });
    };

    // Move the slider to the specified index with true infinite scrolling
    const moveToSlide = (index, animate = true) => {
      if (isAnimating) return;

      // Normalize index for infinite scrolling
      let targetIndex = index;
      if (targetIndex < 0) targetIndex = totalSlides - 1;
      if (targetIndex >= totalSlides) targetIndex = 0;

      // Calculate the position
      const slideWidth = slides[0].offsetWidth;
      const offset = -slideWidth * (targetIndex + totalSlides);

      // Apply transition only if animating
      if (animate) {
        isAnimating = true;
        sliderContainer.style.transition = 'transform 500ms ease-in-out';
      } else {
        sliderContainer.style.transition = 'none';
      }

      // Move the slider
      sliderContainer.style.transform = `translateX(${offset}px)`;

      // Update current index and indicators
      currentIndex = targetIndex;
      updateIndicators(currentIndex);
    };

    // Handle transition end for seamless infinite scrolling
    sliderContainer.addEventListener('transitionend', () => {
      isAnimating = false;

      // If we've reached a clone, jump to the corresponding real slide without animation
      if (currentIndex === totalSlides) {
        moveToSlide(0, false);
      } else if (currentIndex === -1) {
        moveToSlide(totalSlides - 1, false);
      }
    });

    // Initialize the slider
    setupInfiniteScroll();
    updateIndicators(currentIndex);

    // Event listeners
    prevButton.addEventListener('click', () => moveToSlide(currentIndex - 1));
    nextButton.addEventListener('click', () => moveToSlide(currentIndex + 1));

    // Indicator clicks
    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => moveToSlide(index));
    });

    // Handle window resize
    window.addEventListener('resize', () => {
      const newSlidesToShow = window.innerWidth < 768 ? 1 : window.innerWidth < 1024 ? 2 : 3;

      if (newSlidesToShow !== slidesToShow) {
        slidesToShow = newSlidesToShow;
        maxIndex = Math.max(0, totalSlides - slidesToShow);

        // Reset the slider with new clones
        setupInfiniteScroll();
        moveToSlide(0, false);
      }
    });

    // Auto-advance the slider every 5 seconds
    const autoAdvanceInterval = setInterval(() => {
      moveToSlide(currentIndex + 1);
    }, 5000);

    // Pause auto-advance on hover
    sliderContainer.addEventListener('mouseenter', () => {
      clearInterval(autoAdvanceInterval);
    });

    // Resume auto-advance on mouse leave
    sliderContainer.addEventListener('mouseleave', () => {
      setInterval(() => {
        moveToSlide(currentIndex + 1);
      }, 5000);
    });
  });
</script>
