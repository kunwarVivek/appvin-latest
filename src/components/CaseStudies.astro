// Image URLs from AppVin website
const imageUrls = {
  sap: {
    caseStudy: "https://staging.appvintech.com/wp-content/uploads/2025/05/go-lab-3.webp",
    logo: "https://staging.appvintech.com/wp-content/uploads/2025/05/image-518.svg"
  },
  gotrust: {
    caseStudy: "https://staging.appvintech.com/wp-content/uploads/2025/05/go-lab-4.webp",
    logo: "https://staging.appvintech.com/wp-content/uploads/2025/05/Frame-314.svg"
  },
  dealsource: {
    caseStudy: "https://staging.appvintech.com/wp-content/uploads/2025/05/go-lab-1.webp",
    logo: "https://staging.appvintech.com/wp-content/uploads/2025/05/deal-source.png"
  },
  golab: {
    caseStudy: "https://staging.appvintech.com/wp-content/uploads/2025/05/go-lab.webp",
