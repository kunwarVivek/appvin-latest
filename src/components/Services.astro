<section class="section bg-white dark:bg-gray-900 relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5 dark:opacity-3"></div>

  <!-- Decorative elements -->
  <div class="absolute -top-20 -right-20 w-96 h-96 bg-primary-100 dark:bg-primary-900/20 rounded-full opacity-30 blur-3xl"></div>
  <div class="absolute -bottom-20 -left-20 w-96 h-96 bg-secondary-100 dark:bg-secondary-900/20 rounded-full opacity-30 blur-3xl"></div>
  <div class="container mx-auto px-4">
    <!-- Section label -->
    <div class="flex justify-center mb-4">
      <div class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-full bg-secondary-100 text-secondary-800 dark:bg-secondary-900/30 dark:text-secondary-300">
        <span class="w-2 h-2 bg-secondary-500 rounded-full mr-2"></span>
        Our Services
      </div>
    </div>

    <h2 class="section-title text-4xl md:text-5xl font-extrabold mb-8 text-center tracking-tight gradient-text drop-shadow-lg">
      Our <span class="gradient-text">Core Services</span>
    </h2>
    <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 mx-auto mb-8 rounded-full shadow-lg"></div>
    <p class="section-subtitle text-xl md:text-2xl text-primary-700 dark:text-primary-300 font-medium max-w-2xl mx-auto text-center mb-12 leading-relaxed drop-shadow">
      Specializing in SAP integration, business process automation & mining, data governance, and custom AI to drive innovation and efficiency.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.slice(0, 4).map((service) => (
        <div class="bg-gradient-to-br from-primary-50 to-accent-50 dark:from-gray-900 dark:to-gray-800 rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-shadow border border-primary-100 dark:border-primary-800 flex flex-col items-center text-center group transform hover:-translate-y-1 duration-300 h-full">
          <!-- Service image with overlay -->
          <div class="relative mb-6 w-full h-40 rounded-2xl overflow-hidden group-hover:scale-105 transition-transform shadow-lg">
            <img
              src={service.image}
              alt={service.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-primary-900/80 via-primary-900/40 to-transparent opacity-70 group-hover:opacity-60 transition-opacity"></div>

            <!-- Icon overlay -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="bg-white/20 backdrop-blur-sm p-3 rounded-full">
                <Fragment set:html={service.icon} />
              </div>
            </div>
          </div>
          <div class="flex flex-col flex-grow w-full">
            <h3 class="text-xl font-extrabold text-gray-900 dark:text-white mb-4 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
              {service.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-400 mb-6 text-base">
              {service.description}
            </p>
            {service.features && service.features.length > 0 ? (
              <ul class="mb-6 flex flex-col gap-2 text-left w-full mx-auto max-w-xs">
                {service.features.map((feature) => (
                  <li class="flex items-center text-sm text-gray-700 dark:text-gray-300">
                    <svg class="h-4 w-4 text-primary-500 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    {feature}
                  </li>
                ))}
              </ul>
            ) : (
              <div class="mb-6"></div>
            )}
            <div class="mt-auto pt-4"></div>
          </div>
          <!-- Button with proper spacing -->
          <div class="flex justify-center mt-6 mb-2">
            <a
              href={service.link}
              class="inline-flex items-center px-5 py-2 rounded-full bg-gradient-to-r from-accent-600 to-primary-600 text-white font-semibold shadow-md hover:from-secondary-500 hover:to-secondary-600 dark:from-accent-500 dark:to-primary-500 dark:hover:from-secondary-500 dark:hover:to-secondary-600 transition-all duration-300 group-hover:scale-105 hover:shadow-lg hover:shadow-secondary-500/30 dark:hover:shadow-secondary-500/20"
            >
