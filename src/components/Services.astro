<section class="section bg-white dark:bg-gray-900 relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5 dark:opacity-3"></div>

  <!-- Decorative elements -->
  <div class="absolute -top-20 -right-20 w-96 h-96 bg-primary-100 dark:bg-primary-900/20 rounded-full opacity-30 blur-3xl"></div>
  <div class="absolute -bottom-20 -left-20 w-96 h-96 bg-secondary-100 dark:bg-secondary-900/20 rounded-full opacity-30 blur-3xl"></div>
  <div class="container mx-auto px-4">
    <!-- Section label -->
    <div class="flex justify-center mb-4">
      <div class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-full bg-secondary-100 text-secondary-800 dark:bg-secondary-900/30 dark:text-secondary-300">
        <span class="w-2 h-2 bg-secondary-500 rounded-full mr-2"></span>
        Our Services
      </div>
    </div>

    <h2 class="section-title text-4xl md:text-5xl font-extrabold mb-8 text-center tracking-tight drop-shadow-lg">
      Our <span class="gradient-text">Core Services</span>
    </h2>
    <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-600 mx-auto mb-8 rounded-full shadow-lg"></div>
    <p class="gradient-text section-subtitle font-medium max-w-2xl mx-auto text-center mb-12 leading-relaxed">
      Specializing in SAP integration, business process automation & mining, data governance, and custom AI to drive innovation and efficiency.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.slice(0, 4).map((service) => (
        <div class="bg-white dark:bg-gray-900 rounded-xl overflow-hidden shadow-card hover:shadow-blue-glow transition-all border border-slate-200 dark:border-gray-700 hover:border-blue-200 dark:hover:border-blue-800 flex flex-col group transform hover:-translate-y-1 duration-300 h-full">
          <!-- Image with overlay -->
          <div class="relative w-full overflow-hidden h-40 flex-shrink-0 border-b border-slate-200 dark:border-gray-700">
            <img
              src={service.image}
              alt={service.alt}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/40 to-transparent opacity-70 group-hover:opacity-60 transition-opacity"></div>

            <!-- Service badge -->
            <div class="absolute top-4 left-4 z-10">
              <span class="px-3 py-1.5 bg-gradient-to-r from-blue-500/90 to-blue-600/90 text-white rounded-full text-xs font-medium shadow-sm backdrop-blur-sm">
                {service.title}
              </span>
            </div>

            <!-- Icon overlay -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="bg-white/20 backdrop-blur-sm p-3 rounded-full">
                <Fragment set:html={service.icon} />
              </div>
            </div>
          </div>
          <div class="card-content">
            <h3 class="text-xl font-extrabold text-gray-900 dark:text-white mb-4 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
              {service.title}
            </h3>

            <div class="content-list-container flex-grow overflow-y-auto">
              <p class="text-gray-600 dark:text-gray-400 mb-4 text-base">
                {service.description}
              </p>

              {service.features && service.features.length > 0 ? (
                <ul class="list-disc pl-5 space-y-2 text-gray-700 dark:text-gray-300 text-base">
                  {service.features.map((feature) => (
                    <li class="mb-2">{feature}</li>
                  ))}
                </ul>
              ) : (
                <div class="mb-4"></div>
              )}
            </div>

            <div class="button-container">
              <a
                href={service.link}
                class="industry-btn inline-flex items-center"
              >
                <span>Learn More</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 group-hover:ml-2 transition-all duration-300" viewBox="0 0 20 20" fill="currentColor">
