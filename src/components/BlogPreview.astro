---
import { formatDate } from '../utils/date.js';

// Import the blog posts from the shared data file to ensure consistency
import { blogPosts } from '../data/blogPosts.js';

// Use the first 4 blog posts from the shared data file
const featuredPosts = blogPosts.slice(0, 4);
---

<section id="blog" class="section py-20 bg-gray-50 dark:bg-gray-900 relative overflow-hidden">
  <!-- Background decorations -->
  <div class="bg-decoration bg-decoration-1"></div>
  <div class="bg-decoration bg-decoration-2"></div>
  <div class="bg-decoration bg-decoration-3"></div>

  <!-- Background pattern -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5 dark:opacity-3"></div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <!-- Section label -->
      <div class="inline-flex items-center px-3 py-1 mb-4 text-xs font-medium rounded-full bg-primary-50/80 text-primary-600 dark:bg-primary-900/30 dark:text-primary-400 shadow-sm">
        <span class="size-2 bg-primary-500 rounded-full mr-2"></span>
        Blog & Resources
      </div>

      <h2 class="section-title mb-6">
        <span class="gradient-text">Latest</span> Insights
      </h2>

      <div class="w-24 h-1 bg-gradient-primary-soft mx-auto mb-6 rounded-full shadow-sm"></div>

      <p class="section-subtitle">
        Stay updated with our latest thoughts on AI, product engineering, and digital transformation.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {featuredPosts.map((post, index) => (
        <div
          class="bg-slate-100 dark:bg-gray-800 rounded-xl p-6 shadow-card hover:shadow-blue-glow transition-all border border-slate-200 dark:border-gray-700 hover:border-blue-200 dark:hover:border-blue-800 flex flex-col group transform hover:-translate-y-1 duration-300 h-full animate-in fade-in slide-in-from-bottom-5"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="relative mb-6 w-full h-40 rounded-2xl overflow-hidden group-hover:scale-105 transition-transform shadow-lg">
            {post.image ? (
              <img
                src={post.image}
                alt={post.title}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center bg-primary-50 dark:bg-primary-900/30">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-primary-500 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1M19 20a2 2 0 002-2V8a2 2 0 00-2-2h-5M8 12h8M8 16h4" />
                </svg>
              </div>
            )}
            <div class="absolute inset-0 bg-gradient-to-t from-blue-900/80 via-blue-900/40 to-transparent opacity-70 group-hover:opacity-60 transition-opacity"></div>
          </div>

          <div class="flex flex-col flex-grow w-full">
            <h3 class="card-title group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300 text-left">
              {post.title}
            </h3>

            <p class="card-content mb-4 text-left">
              {post.excerpt}
            </p>

            <div class="flex flex-wrap justify-start gap-2 mb-4">
              {post.tags.slice(0, 2).map((tag) => (
                <p
                  class="px-3 py-1 bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-full text-xs font-medium hover:bg-blue-100 dark:hover:bg-blue-800/50 transition-colors duration-300"
                >
                  #{tag}
                </p>
              ))}
            </div>

            <div class="flex items-center text-xs text-gray-500 dark:text-gray-400 mb-5 justify-start">
              <span class="inline-flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1 text-blue-500 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                {formatDate(post.publishDate)}
              </span>
              <span class="mx-2">â€¢</span>
              <span class="inline-flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1 text-blue-500 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                {post.author}
              </span>
            </div>

            <div class="mt-auto pt-4"></div>
          </div>

          <div class="flex justify-start mt-6 mb-2">
            <a
              href={`/blog/${post.slug}`}
              class="inline-flex items-center px-5 py-2 rounded-lg bg-gradient-blue text-white font-semibold shadow-md hover:shadow-blue-glow dark:bg-gradient-blue-dark transition-all duration-300 group-hover:scale-105 focus-ring"
            >
              <span class="drop-shadow-md">Read Article</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 group-hover:ml-2 transition-all duration-300" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-16">
      <a
        href="/blog"
        class="btn px-8 py-4 inline-flex items-center group transform transition-all duration-300 hover:-translate-y-1 rounded-lg border-2 border-blue-500 text-blue-600 hover:text-white hover:bg-blue-500 hover:border-transparent hover:shadow-blue-glow dark:border-blue-400 dark:text-blue-400 dark:hover:text-white dark:hover:bg-blue-500/20 focus-ring"
      >
        <span class="font-semibold drop-shadow-md">View All Articles</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:ml-3 transition-all duration-300" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H3a1 1 0 110-2h9.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239C92AC' fill-opacity='0.2'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }

  /* Prevent shadow on blog card images in dark mode */
  .dark .group:hover img {
    filter: none !important;
    box-shadow: none !important;
  }
</style>
