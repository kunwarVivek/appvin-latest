---
// Stats data
const stats = [
  { value: '94%', label: 'Increase in operational efficiency' },
  { value: '3.5x', label: 'Average ROI for clients' },
  { value: '60%', label: 'Faster time-to-market' },
  { value: '40+', label: 'Enterprise clients' },
];
---

<section class="hero relative overflow-hidden bg-white dark:bg-gray-900 pt-24 pb-16 md:pt-32 md:pb-24">
  <!-- Background elements -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-50/30 to-accent-50/30 dark:from-gray-900 dark:to-gray-800"></div>

  <!-- Animated floating elements -->
  <div class="absolute top-1/4 left-10 w-64 h-64 bg-primary-400/20 dark:bg-primary-700/20 rounded-full mix-blend-multiply dark:mix-blend-overlay filter blur-3xl animate-blob"></div>
  <div class="absolute bottom-1/4 right-10 w-64 h-64 bg-secondary-400/20 dark:bg-secondary-700/20 rounded-full mix-blend-multiply dark:mix-blend-overlay filter blur-3xl animate-blob animation-delay-2000"></div>
  <div class="absolute top-1/2 right-1/3 w-64 h-64 bg-accent-400/20 dark:bg-accent-700/20 rounded-full mix-blend-multiply dark:mix-blend-overlay filter blur-3xl animate-blob animation-delay-4000"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Animated badge -->
      <div class="inline-flex items-center px-3 py-1 mb-4 text-xs font-medium rounded-full bg-primary-100 text-primary-800 dark:bg-primary-900/30 dark:text-primary-300 animate-pulse">
        <span class="w-2 h-2 bg-primary-500 rounded-full mr-2"></span>
        AI-Native Digital Agency
      </div>

      <h1 class="hero-title">
        <span>Transform Your Business with</span><br />
        <span class="gradient-text">AI-Powered Innovation</span>
      </h1>
      <p class="hero-subtitle mx-auto max-w-2xl">
        We build intelligent digital products that drive revenue growth, streamline operations, and create exceptional customer experiences.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 mt-8 justify-center">
        <a href="/contact" class="inline-flex items-center px-5 py-2 rounded-lg bg-gradient-blue text-white font-semibold shadow-md hover:shadow-blue-glow dark:bg-gradient-blue-dark transition-all duration-300 hover:scale-105 focus-ring">
          <span class="drop-shadow-md">Get Started</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 group-hover:ml-2 transition-all duration-300" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
        <a href="/case-studies" class="btn px-8 py-4 inline-flex items-center group transform transition-all duration-300 hover:-translate-y-1 rounded-lg border-2 border-blue-500 text-blue-600 hover:text-white hover:bg-blue-500 hover:border-transparent hover:shadow-blue-glow dark:border-blue-400 dark:text-blue-400 dark:hover:text-white dark:hover:bg-blue-500/20 focus-ring">
          <span class="font-semibold drop-shadow-md">View Case Studies</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:ml-3 transition-all duration-300" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H3a1 1 0 110-2h9.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>

      <!-- Company logos -->
      <div class="mt-12">
        <div class="flex items-center justify-center mb-6">
          <div class="h-px w-12 bg-gray-300 dark:bg-gray-700"></div>
          <div class="h-px w-12 bg-gray-300 dark:bg-gray-700"></div>
        </div>

        <div class="flex flex-wrap justify-center gap-x-8 gap-y-4 mt-6">
          <!-- Company logos with hover effect -->
          <div class="w-8 h-8 opacity-60 hover:opacity-100 transition-all duration-300">
            <svg class="w-full h-full text-gray-400 dark:text-gray-500" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 22c-5.523 0-10-4.477-10-10S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10z"/>
              <path d="M18 12a6 6 0 11-12 0 6 6 0 0112 0z"/>
            </svg>
          </div>
          <div class="w-8 h-8 opacity-60 hover:opacity-100 transition-all duration-300">
            <svg class="w-full h-full text-gray-400 dark:text-gray-500" viewBox="0 0 24 24" fill="currentColor">
              <path d="M24 12c0 6.627-5.373 12-12 12S0 18.627 0 12 5.373 0 12 0s12 5.373 12 12zm-12 8a8 8 0 100-16 8 8 0 000 16z"/>
              <path d="M12 6a6 6 0 00-6 6h12a6 6 0 00-6-6z"/>
            </svg>
          </div>
          <div class="w-8 h-8 opacity-60 hover:opacity-100 transition-all duration-300">
            <svg class="w-full h-full text-gray-400 dark:text-gray-500" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0L0 12l12 12 12-12L12 0zm0 18l-6-6 6-6 6 6-6 6z"/>
            </svg>
          </div>
          <div class="w-8 h-8 opacity-60 hover:opacity-100 transition-all duration-300">
            <svg class="w-full h-full text-gray-400 dark:text-gray-500" viewBox="0 0 24 24" fill="currentColor">
              <path d="M24 7H0v10h24V7zm-2 8H2V9h20v6z"/>
            </svg>
          </div>
          <div class="w-8 h-8 opacity-60 hover:opacity-100 transition-all duration-300">
            <svg class="w-full h-full text-gray-400 dark:text-gray-500" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0L6 12l6 12 6-12-6-12zm0 18l-3-6 3-6 3 6-3 6z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Stats Section -->
<section class="py-12 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <p class="text-center text-gray-600 dark:text-gray-400 mb-8">Trusted by industry leaders across sectors</p>
    <div class="stats-container">
      {stats.map(stat => (
        <div class="stat-item">
          <div class="stat-value">{stat.value}</div>
          <div class="stat-label">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
