<section class="py-20 bg-white dark:bg-gray-900 relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5 dark:opacity-3"></div>

  <!-- Decorative elements -->
  <div class="absolute top-1/3 -left-20 size-96 bg-primary-100 dark:bg-primary-900/20 rounded-full opacity-30 blur-3xl"></div>
  <div class="absolute bottom-1/3 -right-20 size-96 bg-accent-100 dark:bg-accent-900/20 rounded-full opacity-30 blur-3xl"></div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="section-title text-4xl md:text-5xl font-extrabold mb-8 text-center tracking-tight">
        Our <span class="gradient-text">Clients</span>
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 mx-auto mb-8 rounded-full shadow-lg"></div>

      <p class="section-subtitle text-xl md:text-2xl text-accent-700 dark:text-accent-300 font-medium max-w-2xl mx-auto text-center mb-12 leading-relaxed drop-shadow">
        In our actions and thinking, we are result-oriented and monitor our clients' (commercial) objectives. Check out our clients
      </p>
    </div>

    <!-- Client logos section -->
    <div class="space-y-12">
      <!-- First row of clients -->
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-8 items-center justify-center">
        {clientsRow1.map((client, index) => (
          <div
            class="flex items-center justify-center p-4 bg-white dark:bg-gray-900 rounded-xl shadow-card hover:shadow-blue-glow border border-gray-100 dark:border-gray-700 transition-all duration-300 hover:-translate-y-1 group animate-in fade-in slide-in-from-bottom-5"
            style={`animation-delay: ${index * 50}ms`}
          >
            <img
              src={client.logo}
              alt={client.alt}
              class="max-h-12 w-auto object-contain filter grayscale opacity-70 dark:opacity-90 dark:invert-[0.7] group-hover:grayscale-0 group-hover:opacity-100 dark:group-hover:invert-0 transition-all duration-300"
            />
          </div>
        ))}
      </div>

      <!-- Second row of clients -->
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-8 items-center justify-center">
        {clientsRow2.map((client, index) => (
          <div
            class="flex items-center justify-center p-4 bg-white dark:bg-gray-900 rounded-xl shadow-card hover:shadow-blue-glow border border-gray-100 dark:border-gray-700 transition-all duration-300 hover:-translate-y-1 group animate-in fade-in slide-in-from-bottom-5"
            style={`animation-delay: ${(index + 6) * 50}ms; ${client.name === 'New Client' ? 'padding: 0;' : ''}`}
          >
            <img
              src={client.logo}
              alt={client.alt}
              class="max-h-12 w-auto object-contain filter grayscale opacity-70 dark:opacity-90 dark:invert-[0.7] group-hover:grayscale-0 group-hover:opacity-100 dark:group-hover:invert-0 transition-all duration-300"
              style={client.name === 'New Client' ? 'height: 40px; width: auto; max-width: 100%; object-fit: contain;' : ''}
            />
          </div>
        ))}
      </div>

      <!-- Third row of clients -->
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-8 items-center justify-center">
        {clientsRow3.map((client, index) => (
          <div
            class="flex items-center justify-center p-4 bg-white dark:bg-gray-900 rounded-xl shadow-card hover:shadow-blue-glow border border-gray-100 dark:border-gray-700 transition-all duration-300 hover:-translate-y-1 group animate-in fade-in slide-in-from-bottom-5"
            style={`animation-delay: ${(index + 12) * 50}ms`}
