---

<section class="section bg-gray-50 dark:bg-gray-800 relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5 dark:opacity-3"></div>

  <!-- Decorative elements -->
  <div class="absolute -top-20 -left-20 w-96 h-96 bg-accent-100 dark:bg-accent-900/20 rounded-full opacity-30 blur-3xl"></div>
  <div class="absolute -bottom-20 -right-20 w-96 h-96 bg-primary-100 dark:bg-primary-900/20 rounded-full opacity-30 blur-3xl"></div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Section label -->
    <div class="flex justify-center mb-4">
      <div class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-full bg-accent-100 text-accent-800 dark:bg-accent-900/30 dark:text-accent-300">
        <span class="w-2 h-2 bg-accent-500 rounded-full mr-2"></span>
        Our Expertise
      </div>
    </div>

    <h2 class="section-title text-4xl md:text-5xl font-extrabold mb-8 text-center tracking-tight gradient-text drop-shadow-lg">
      Our <span class="gradient-text">Industry Expertise</span>
    </h2>
    <div class="w-24 h-1 bg-gradient-to-r from-accent-500 to-primary-500 mx-auto mb-8 rounded-full shadow-lg"></div>
    <p class="section-subtitle text-xl md:text-2xl text-accent-700 dark:text-accent-300 font-medium max-w-2xl mx-auto text-center mb-12 leading-relaxed drop-shadow">
      We deliver measurable ROI and innovation across leading industries with tailored, AI-powered digital solutions.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {industries.map((industry) => (
        <div class="bg-gradient-to-br from-primary-50 to-accent-50 dark:from-gray-900 dark:to-gray-800 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all border border-primary-100 dark:border-primary-800 flex flex-col items-center text-center group transform hover:-translate-y-1 duration-300 h-full">
          <!-- Image with overlay -->
          <div class="relative w-full h-48 overflow-hidden">
            <img
              src={industry.image}
              alt={`${industry.title} industry`}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/40 to-transparent opacity-70 group-hover:opacity-60 transition-opacity"></div>

            <!-- Industry badge -->
            <div class="absolute top-4 right-4 z-10">
              <span class="px-3 py-1.5 bg-gradient-to-r from-accent-500/90 to-primary-500/90 text-white dark:from-accent-600 dark:to-primary-600 rounded-full text-xs font-medium shadow-sm backdrop-blur-sm">
                {industry.title}
              </span>
            </div>

            <!-- Icon overlay -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="bg-white/20 backdrop-blur-sm p-4 rounded-full">
                <Fragment set:html={industry.icon} />
              </div>
            </div>
          </div>
          <div class="p-6 flex flex-col flex-grow w-full">
            <h3 class="text-xl font-extrabold text-gray-900 dark:text-white mb-4 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
              {industry.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-400 mb-6 text-base">
              {industry.description}
            </p>
            <div class="mt-auto"></div>

            <!-- Button with proper spacing -->
            <div class="flex justify-center mt-6 mb-2">
              <a
                href={industry.link}
                class="inline-flex items-center px-5 py-2 rounded-full bg-gradient-to-r from-accent-600 to-primary-600 text-white font-semibold shadow-md hover:from-secondary-500 hover:to-secondary-600 dark:from-accent-500 dark:to-primary-500 dark:hover:from-secondary-500 dark:hover:to-secondary-600 transition-all duration-300 group-hover:scale-105 hover:shadow-lg hover:shadow-secondary-500/30 dark:hover:shadow-secondary-500/20"
              >
                <span class="drop-shadow-md">Learn More</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 group-hover:ml-2 transition-all duration-300" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-16">
      <a
        href="/industries"
        class="btn px-8 py-4 inline-flex items-center group transform transition-all duration-300 hover:-translate-y-1 rounded-full border-2 border-accent-600 text-accent-600 hover:text-white hover:bg-gradient-to-r hover:from-secondary-500 hover:to-secondary-600 hover:border-transparent hover:shadow-xl hover:shadow-secondary-500/30 dark:border-accent-500 dark:text-accent-400 dark:hover:text-white dark:hover:from-secondary-500 dark:hover:to-secondary-600 dark:hover:shadow-secondary-500/20"
      >
        <span class="font-semibold drop-shadow-md">View All Industries</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:ml-3 transition-all duration-300" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H3a1 1 0 110-2h9.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

