---
// Industries data
const industries = [
  {
    title: 'Financial services',
    description: 'We empower financial institutions with automation, AI, and secure platforms, streamlining operations, enhancing compliance, and improving customer onboarding, fraud detection, and reporting.',
    icon: 'üí∞',
    link: '/industries/financial-services',
  },
  {
    title: 'Healthcare',
    description: 'We create AI-powered healthcare software for seamless EHR/EMR management, remote monitoring, and patient engagement, ensuring HIPAA compliance and improving outcomes across healthcare systems.',
    icon: 'üè•',
    link: '/industries/healthcare',
  },
  {
    title: 'Mobility',
    description: 'We develop smart mobility solutions for fleet tracking, EV charging, and ride-hailing, optimizing routes, reducing costs, and enhancing sustainability in the transportation sector.',
    icon: 'üöó',
    link: '/industries/mobility',
  },
  {
    title: 'Logistics',
    description: 'We build logistics software that optimizes inventory, shipping, and delivery processes, using AI and IoT for real-time analytics and improved supply chain efficiency.',
    icon: 'üì¶',
    link: '/industries/logistics',
  },
];
---

<section class="section bg-gray-50 dark:bg-gray-800 relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5 dark:opacity-3"></div>

  <!-- Decorative elements -->
  <div class="absolute -top-20 -left-20 w-96 h-96 bg-accent-100 dark:bg-accent-900/20 rounded-full opacity-30 blur-3xl"></div>
  <div class="absolute -bottom-20 -right-20 w-96 h-96 bg-primary-100 dark:bg-primary-900/20 rounded-full opacity-30 blur-3xl"></div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Section label -->
    <div class="flex justify-center mb-4">
      <div class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-full bg-accent-100 text-accent-800 dark:bg-accent-900/30 dark:text-accent-300">
        <span class="w-2 h-2 bg-accent-500 rounded-full mr-2"></span>
        Our Expertise
      </div>
    </div>

    <h2 class="section-title">
      In Which <span class="gradient-text">Industries</span> We Have Expertise
    </h2>

    <div class="w-20 h-1 bg-gradient-to-r from-accent-500 to-primary-500 mx-auto mb-6 rounded-full"></div>

    <p class="section-subtitle">
      Our AI-powered services deliver measurable ROI through increased efficiency, reduced costs, and accelerated innovation.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-12">
      {industries.map(industry => (
        <div class="service-card group flex flex-col h-full">
          <div class="mb-6 h-40 flex items-center justify-center bg-gradient-to-br from-accent-50 to-primary-50 dark:from-accent-900/20 dark:to-primary-900/20 rounded-lg overflow-hidden">
            <div class="w-20 h-20 transform transition-transform duration-300 group-hover:scale-110 text-accent-600 dark:text-accent-400">
              {industry.title === 'Financial services' && (
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-full h-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z" />
                </svg>
              )}

              {industry.title === 'Healthcare' && (
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-full h-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                </svg>
              )}

              {industry.title === 'Mobility' && (
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-full h-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
                </svg>
              )}

              {industry.title === 'Logistics' && (
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-full h-full">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0l4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0l-5.571 3-5.571-3" />
                </svg>
              )}
            </div>
          </div>

          <div class="flex-grow">
            <h3 class="text-xl font-bold mb-2 group-hover:text-accent-600 transition-colors duration-300">{industry.title}</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">{industry.description}</p>
          </div>

          <div class="mt-auto pt-4">
            <a href={industry.link} class="inline-flex items-center text-accent-600 dark:text-accent-400 hover:text-accent-800 dark:hover:text-accent-300 font-medium group-hover:translate-x-2 transition-all duration-300">
              Learn more
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 group-hover:ml-2 transition-all duration-300" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-16">
      <a href="/industries" class="btn btn-outline border-accent-600 text-accent-600 hover:bg-accent-600 hover:text-white px-8 py-4 inline-flex items-center group transform transition-transform duration-300 hover:-translate-y-1 hover:shadow-hover">
        View All Industries
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:ml-3 transition-all duration-300" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H3a1 1 0 110-2h9.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

