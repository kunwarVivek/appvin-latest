---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  noindex?: boolean;
  nofollow?: boolean;
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
  twitterTitle?: string;
  twitterDescription?: string;
  twitterImage?: string;
}

const {
  title,
  description,
  canonical,
  noindex,
  nofollow,
  ogTitle,
  ogDescription,
  ogImage,
  twitterTitle,
  twitterDescription,
  twitterImage,
} = Astro.props;
---

<Layout
  title={title}
  description={description}
  canonical={canonical}
  noindex={noindex}
  nofollow={nofollow}
  ogTitle={ogTitle}
  ogDescription={ogDescription}
  ogImage={ogImage}
  twitterTitle={twitterTitle}
  twitterDescription={twitterDescription}
  twitterImage={twitterImage}
>
  <Header />

  <main class="flex-grow overflow-hidden min-h-screen">
    <slot />
  </main>

  <Footer />
</Layout>
