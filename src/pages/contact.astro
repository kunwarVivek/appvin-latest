---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MultiStepForm from '../components/MultiStepForm.astro';
---

<Layout
  title="Contact Us | AI Native Digital Agency"
  description="Get in touch with our team to discuss how we can help with your product engineering needs."
>
  <Header />

  <main>
    <!-- Page Header -->
    <section class="pt-32 pb-12 md:pt-40 md:pb-20 bg-gray-50 dark:bg-gray-800">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
            Contact Us
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400">
            Have a question or ready to start your AI-native product engineering journey? We're here to help.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-16 md:py-24 bg-white dark:bg-gray-900">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Contact Information -->
            <div class="animate-in fade-in slide-in-from-left-5 duration-500">
              <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
                <span class="gradient-text">Accelerate</span> Your Business Growth
              </h2>

              <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-md">
                Ready to achieve measurable business outcomes? Our AI solutions deliver an average 3.5x ROI within 12 months. Let's discuss your specific challenges.
              </p>

              <div class="space-y-6">
                <div class="flex items-start group hover:bg-gray-50 dark:hover:bg-gray-800/50 p-3 rounded-lg transition-colors">
                  <div class="shrink-0 mt-1 group-hover:text-primary-500 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="size-6 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors">Phone</h3>
                    <p class="mt-1 text-gray-600 dark:text-gray-400">+31 6 11 30 68 56</p>
                  </div>
                </div>

                <div class="flex items-start group hover:bg-gray-50 dark:hover:bg-gray-800/50 p-3 rounded-lg transition-colors">
                  <div class="shrink-0 mt-1 group-hover:text-primary-500 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="size-6 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors">Email</h3>
                    <p class="mt-1 text-gray-600 dark:text-gray-400">info@appvintech.com</p>
                  </div>
                </div>

                <div class="flex items-start group hover:bg-gray-50 dark:hover:bg-gray-800/50 p-3 rounded-lg transition-colors">
                  <div class="shrink-0 mt-1 group-hover:text-primary-500 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="size-6 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors">Location</h3>
                    <p class="mt-1 text-gray-600 dark:text-gray-400">
                      Kanaalpark 140<br />
                      2341 JV, Leiden<br />
                      Netherlands
                    </p>
                  </div>
                </div>
              </div>

              <div class="mt-8">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Follow Us</h3>
                <div class="flex space-x-4">
                  <a href="#" class="text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors hover:scale-110 transform duration-200">
                    <span class="sr-only">Twitter</span>
                    <svg class="size-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                    </svg>
                  </a>
                  <a href="#" class="text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors hover:scale-110 transform duration-200">
                    <span class="sr-only">LinkedIn</span>
                    <svg class="size-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
                    </svg>
                  </a>
                  <a href="#" class="text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors hover:scale-110 transform duration-200">
                    <span class="sr-only">GitHub</span>
                    <svg class="size-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>

            <!-- Multi-Step Contact Form -->
            <div class="animate-in fade-in slide-in-from-right-5 duration-500 delay-150">
              <MultiStepForm />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
          <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Our Location</h3>
              <p class="text-gray-600 dark:text-gray-400 mt-2">Visit our office in Leiden, Netherlands</p>
            </div>

            <div class="relative h-96 bg-gray-200 dark:bg-gray-700 overflow-hidden">
              <!-- Interactive Map Placeholder -->
              <div class="absolute inset-0 bg-gradient-to-br from-primary-100/30 to-secondary-100/30 dark:from-primary-900/30 dark:to-secondary-900/30">
                <!-- Grid Pattern -->
                <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>

                <!-- Location Pin -->
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
                  <div class="relative">
                    <!-- Pulsating Circle -->
                    <div class="absolute -inset-8 bg-primary-500/20 rounded-full animate-pulse"></div>
                    <div class="absolute -inset-4 bg-primary-500/30 rounded-full animate-pulse animation-delay-300"></div>

                    <!-- Pin Icon -->
                    <div class="relative size-12 bg-primary-500 rounded-full flex items-center justify-center shadow-lg animate-bounce animation-delay-1000 animation-duration-2000">
                      <svg xmlns="http://www.w3.org/2000/svg" class="size-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    </div>
                  </div>
                </div>

                <!-- City Labels -->
                <div class="absolute top-1/4 left-1/4 transform -translate-x-1/2 -translate-y-1/2 bg-white/80 dark:bg-gray-800/80 px-3 py-1 rounded-full text-sm font-medium text-gray-700 dark:text-gray-300 shadow-sm">Amsterdam</div>
                <div class="absolute bottom-1/3 right-1/4 transform translate-x-1/2 translate-y-1/2 bg-white/80 dark:bg-gray-800/80 px-3 py-1 rounded-full text-sm font-medium text-gray-700 dark:text-gray-300 shadow-sm">Rotterdam</div>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-primary-500 px-4 py-2 rounded-full text-sm font-bold text-white shadow-md">
                  Leiden
                  <span class="absolute -bottom-1 left-1/2 transform -translate-x-1/2 size-2 bg-primary-500 rotate-45"></span>
                </div>
              </div>

              <!-- Map Controls -->
              <div class="absolute bottom-4 right-4 flex flex-col space-y-2">
                <button class="size-10 bg-white dark:bg-gray-800 rounded-full flex items-center justify-center shadow-md text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="size-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                  </svg>
                </button>
                <button class="size-10 bg-white dark:bg-gray-800 rounded-full flex items-center justify-center shadow-md text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="size-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 12H6" />
                  </svg>
                </button>
              </div>
            </div>

            <div class="p-6 bg-white dark:bg-gray-800 flex flex-col sm:flex-row sm:items-center sm:justify-between">
              <div class="flex items-center mb-4 sm:mb-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="size-5 text-primary-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="text-gray-700 dark:text-gray-300">Kanaalpark 140, 2341 JV, Leiden, Netherlands</span>
              </div>
              <a href="https://maps.google.com/?q=Kanaalpark+140,+2341+JV,+Leiden,+Netherlands" target="_blank" class="btn btn-outline text-sm px-4 py-2">
                Get Directions
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <style>
      .bg-grid-pattern {
        background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239C92AC' fill-opacity='0.2'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
      }

      .animation-delay-300 {
        animation-delay: 300ms;
      }

      .animation-delay-1000 {
        animation-delay: 1000ms;
      }

      .animation-duration-2000 {
        animation-duration: 2000ms;
      }
    </style>
  </main>

  <Footer />
</Layout>
