---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const servicesEntries = await getCollection('services');

  return servicesEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const { title, description, icon, features, image } = entry.data;

// Get all services for the sidebar
const allServices = await getCollection('services');
const sortedServices = allServices.sort((a, b) => {
  // If order is defined for both, sort by order
  if (a.data.order !== undefined && b.data.order !== undefined) {
    return a.data.order - b.data.order;
  }
  // If only a has order, it comes first
  if (a.data.order !== undefined) {
    return -1;
  }
  // If only b has order, it comes first
  if (b.data.order !== undefined) {
    return 1;
  }
  // If neither has order, sort by title
  return a.data.title.localeCompare(b.data.title);
});
---

<Layout
  title={`${title} | AI Native Digital Agency`}
  description={description}
>
  <Header />

  <main>
    <!-- Page Header -->
    <section class="pt-32 pb-12 md:pt-40 md:pb-20 bg-gradient-to-b from-white to-blue-50 dark:from-gray-900 dark:to-gray-800">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <div class="flex justify-center mb-6">
            <div class="p-4 rounded-full bg-primary-50 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400 shadow-md">
              {/* Handle string-based icons */}
              {icon === 'brain' && (
                <img src="/images/services/brain.svg" alt="AI Strategy" class="size-16 text-current" />
              )}
              {icon === 'code' && (
                <img src="/images/services/code.svg" alt="Product Engineering" class="size-16 text-current" />
              )}
              {icon === 'refresh' && (
                <img src="/images/services/refresh.svg" alt="Digital Transformation" class="size-16 text-current" />
              )}
              {icon === 'cloud' && (
                <img src="/images/services/cloud.svg" alt="Cloud Solutions" class="size-16 text-current" />
              )}
              {icon === 'chart' && (
                <img src="/images/services/chart.svg" alt="Data Analytics" class="size-16 text-current" />
              )}
              {icon === 'design' && (
                <img src="/images/services/design.svg" alt="Design" class="size-16 text-current" />
              )}

              {/* Handle path-based icons */}
              {icon && icon.startsWith('/') && (
                <img
                  src={icon.replace('.webp', '.svg')}
                  alt={title}
                  class="size-16 text-current"
                />
              )}
            </div>
          </div>

          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
            {title}
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400">
            {description}
          </p>
        </div>
      </div>
    </section>

    <!-- Service Content -->
    <section class="py-16 md:py-24 bg-gradient-to-br from-white via-blue-50 to-blue-100 dark:from-gray-900 dark:via-gray-900 dark:to-gray-800">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row gap-12">
          <!-- Main Content -->
          <div class="lg:w-2/3">
            {image && (
              <div class="mb-8 rounded-lg overflow-hidden">
                <img
                  src={image}
                  alt={title}
                  class="w-full h-auto object-cover"
                />
              </div>
            )}

            <div class="prose prose-lg dark:prose-invert max-w-none">
              <Content />
            </div>

            <!-- CTA -->
            <div class="mt-12 bg-gradient-to-r from-blue-50 to-blue-100 dark:from-gray-800 dark:to-gray-900 rounded-lg p-8 border border-blue-100 dark:border-blue-900">
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
                Ready to Get Started?
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mb-6">
                Contact us today to discuss how our {title} service can help transform your business.
              </p>
              <a href="/contact" class="btn btn-primary">
                Request a Consultation
              </a>
            </div>
          </div>

          <!-- Sidebar -->
          <div class="lg:w-1/3">
            <!-- Key Features -->
            {features && features.length > 0 && (
              <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md p-6 mb-8 border border-blue-100 dark:border-blue-900">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">
                  Key Features
                </h3>
                <ul class="space-y-3">
                  {features.map((feature) => (
                    <li class="flex items-start">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600 dark:text-primary-400 mt-0.5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-gray-600 dark:text-gray-400">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <!-- Other Services -->
            <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md p-6 border border-blue-100 dark:border-blue-900">
              <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">
                Other Services
              </h3>
              <ul class="space-y-4">
                {sortedServices
                  .filter(service => service.slug !== entry.slug)
                  .map((service) => (
                    <li>
                      <a
                        href={`/services/${service.slug}`}
                        class="flex items-center p-3 rounded-lg text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-primary-50 dark:hover:bg-primary-900/20 transition-all"
                      >
                        <div class="mr-3 text-primary-500 dark:text-primary-400">
                          {/* Handle string-based icons */}
                          {service.data.icon === 'brain' && (
                            <img src="/images/services/brain.svg" alt="AI Strategy" class="size-6 text-current" />
                          )}
                          {service.data.icon === 'code' && (
                            <img src="/images/services/code.svg" alt="Product Engineering" class="size-6 text-current" />
                          )}
                          {service.data.icon === 'refresh' && (
                            <img src="/images/services/refresh.svg" alt="Digital Transformation" class="size-6 text-current" />
                          )}
                          {service.data.icon === 'cloud' && (
                            <img src="/images/services/cloud.svg" alt="Cloud Solutions" class="size-6 text-current" />
                          )}
                          {service.data.icon === 'chart' && (
                            <img src="/images/services/chart.svg" alt="Data Analytics" class="size-6 text-current" />
                          )}
                          {service.data.icon === 'design' && (
                            <img src="/images/services/design.svg" alt="Design" class="size-6 text-current" />
                          )}

                          {/* Handle path-based icons */}
                          {service.data.icon && service.data.icon.startsWith('/') && (
                            <img
                              src={service.data.icon.replace('.webp', '.svg')}
                              alt={service.data.title}
                              class="size-6 text-current"
                            />
                          )}
                        </div>
                        <span>{service.data.title}</span>
                      </a>
                    </li>
                  ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
